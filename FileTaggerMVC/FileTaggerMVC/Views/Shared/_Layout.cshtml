<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
    <link rel="SHORTCUT ICON" href="@Url.Content("~/favicon.ico")" />
</head>
<body>
    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Search", "Index", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Tag" ? "active" : "")">@Html.ActionLink("Tags", "Index", "Tag")</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "TagType" ? "active" : "")">@Html.ActionLink("Tag Types", "Index", "TagType")</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "File" ? "active" : "")">@Html.ActionLink("Files", "Index", "File")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
