@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ListFiles", "File"))
{
    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group">
                    @Html.TextBox("folderPath", string.Empty, new { @class = "form-control", placeholder = "Folder path..."})
                    <span class="input-group-btn">
                        <input type="submit" value="Go!" class="btn btn-default" />
                    </span>
                </div>
            </div>
        </div>
    </div>
    if (@ViewBag.FolderPath != null)
    {
        <b>
            @ViewBag.FolderPath
        </b>
    }
}