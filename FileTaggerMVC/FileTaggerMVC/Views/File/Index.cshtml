@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ListFiles", "File", System.Web.Mvc.FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                @Html.Label("Folder path:", new { @class = "control-label col-md-2" })
                <div class="input-group">
                    @Html.TextBox("folderPath", string.Empty, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <input type="submit" value="List Files" class="btn btn-default" />
                    </span>
                </div>
            </div>
        </div>
    </div>
}